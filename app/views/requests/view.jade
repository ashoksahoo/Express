extends ../layout
block content
	h2 Title
	p #{request.title}
	h3 Location
	p #{request.location}
	if(!request.approved)
		h3 Responses
		- var counter = 0
			ol
				each response in request.response
					li
						p #{response.amount}
						p #{response.eta}
						p #{response.created_by.profile.name}
						a.btn.btn-success(href='/requests/#{request._id}/approve/#{counter}') Approve
						- counter = counter +1
	if(request.approved)
		h3 Approved Response
		each response in request.response
			if(response.approved)
				p #{response.amount}
				p #{response.eta}
				p #{response.created_by.profile.name}

