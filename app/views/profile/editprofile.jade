extends ../layout
block content
		.row
			.col-sm-4
				form(method='post')
					.form-group
						label Email
						input.form-control(type='email', name='email', value = "#{user.local.email}", disabled)
					.form-group
						label Name
						input.form-control(type='text', name='name', value = "#{user.profile.name}")
					.form-group
						label Phone Number
						input.form-control(type='text', name='phone', value = "#{user.profile.phone}")
					.form-group
						label Location
						input.form-control(type='text', name='location', value = "#{user.profile.location}")
					if user.role == admin
							input.form-control(type='hidden', pattern="[0-9]{13,16}", name='card', value = "#{user.profile.card}")
							input.form-control(type='hidden', name='type', value = "#{user.profile.type}")
							input.form-control(type='hidden', name='contact', value = "#{user.profile.contact}")
							input.form-control(type="hidden", name='details', value = "#{user.profile.details}")
							input.form-control(type='hidden', name='timings', value = "#{user.profile.timings}")
							input.form-control(type='hidden', name='account', value = "#{user.profile.account}")

					if user.role == business
						.form-group
							label Type
							input.form-control(type='text', name='type', value = "#{user.profile.type}")
						.form-group
							label Contact
							input.form-control(type='text', name='contact', value = "#{user.profile.contact}")
						.form-group
							label Contact Details
							textarea.form-control( name='details') #{user.profile.details}
						.form-group
							label Timings
							input.form-control(type='text', name='timings', value = "#{user.profile.timings}")
						.form-group
							label Bank acount
							input.form-control(type='text', name='account', value = "#{user.profile.account}")
						input.form-control(type='hidden', pattern="[0-9]{13,16}", name='card', value = "#{user.profile.card}")

					if user.role == client
						.form-group
							label Credit Card
							input.form-control(type='text', pattern="[0-9]{13,16}", name='card', value = "#{user.profile.card}")

							input.form-control(type='hidden', name='type', value = "#{user.profile.type}")
							input.form-control(type='hidden', name='contact', value = "#{user.profile.contact}")
							input.form-control(type="hidden", name='details', value = "#{user.profile.details}")
							input.form-control(type='hidden', name='timings', value = "#{user.profile.timings}")
							input.form-control(type='hidden', name='account', value = "#{user.profile.account}")

					.form-group
					button.btn.btn-success.btn-md(type='submit') Save