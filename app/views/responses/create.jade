extends ../layout
block content
	form#form1.stdform(method='post', action='')
		.par.control-group
			label.control-label(for='amount') Amount
			.controls
				input#companyname.input-large(type='text', name='amount', required)
		.control-group
			label.control-label(for='eta') ETA
			.controls
				input#contractno.input-large(type='date', name='eta', required)
		p.stdformbutton
			button.btn.btn-primary Submit
